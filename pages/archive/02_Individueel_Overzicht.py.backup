                use_container_width=True,
                hide_index=True
            )
            
            # Export individuele data
            csv_individual = speler_data.to_csv(index=False)
            st.download_button(
                label=f"ðŸ“¥ Download {selected_speler} gegevens",
                data=csv_individual,
                file_name=f"{selected_speler}_testresultaten.csv",
                mime="text/csv"
            )

con.close()