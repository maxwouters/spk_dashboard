                            y=speler_data["VO2MAX"],
                            mode='lines+markers',
                            name='VO2Max',
                            line=dict(color='#ff7f0e', width=3),
                            marker=dict(size=8),
                            yaxis='y3' if viz_metric == "Alle" else 'y'
